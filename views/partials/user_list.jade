 
.main(role='main')
  section.page-header
    .container      
      
      .row
        .col-md-12
          h1 Admin Panel
    .container
      .row
        .col-md-3
          aside#sidebar-center.sidebar
            .sidebar-header
              .sidebar-title
                br
            
            .nano
              .nano-content
                nav#menu.nav-main(role='navigation')
                  ul.nav.nav-main.center-box
                    li
                      a(href='#/user_list') User List
                    li.active
                      a(href='#/find_land') Land details
                      
                    li
                      a(href='#/land_registration') Land Registration
                    

                    li
                      a(href='#/admin') Home
                

        .col-md-9
           
                     

            .row
              .col-md-12
                    
                    table#datatable-editable.table.table-bordered.table-striped.mb-none
                      thead
                        

                        tr(style='color:white;')
                          th Username
                          th Email
                          th Contact Number
                          th NID
                        tr
                          th
                            input(size="10",type="text", ng-model="user.username", ng-keyup="getUserList(user)")
                          th
                            input(size="10",type="text", ng-model="user.email", ng-keyup="getUserList(user)")
                          th
                            input(size="10",type="text", ng-model="user.phoneNumber", ng-keyup="getUserList(user)")
                          th
                            input(size="10",type="text", ng-model="user.nid", ng-keyup="getUserList(user)")
                            
                      tbody(style='color:white;')
                        tr(ng-repeat = "user in userList")
                          td(ng-bind="user.username")
                          td(ng-bind="user.email")
                          td(ng-bind="user.phoneNumber")
                          td(ng-bind="user.nid")
                          


                          td 
                              td
                                a.btn.btn-3d.btn-warning.btn-sm(href="#/user_update/{{user._id}}") Edit Info
                              td
                                button.btn.btn-3d.btn-danger.btn-sm(font-size: 10px;)(ng-click="userDelete(user._id)") Delete