.container
  .row
    .col-md-12
      .featured-boxes
        .row
          .col-md-3
          .col-md-6
            .featured-box.featured-box-primary.align-left.mt-xlg
              .box-content
                h4.heading-primary.text-uppercase.mb-md Update Account Information
                form#frmSignUp()
                  .row
                    .form-group
                      .col-md-12
                        label(style='color:white;') Username
                        input.form-control(ng-model="reg.username",name='name',type='text')
                  
                  .row
                    .form-group
                      .col-md-12
                        label(style='color:white;') E-mail Address
                        input.form-control(ng-model="reg.email",name='email',type='text') 
                  .row
                    .form-group
                      .col-md-12
                        label(style='color:white;') Phone number
                        input.form-control(ng-model="reg.phoneNumber",name='phone',type='text')

                  .row
                    .form-group
                      .col-md-12
                        label(style='color:white;') National ID number
                        input.form-control(ng-model="reg.nid",name='nid',type='text')                 
                  

                    .row
                    .form-group
                      .col-md-12
                        label(style='color:white;') Case details
                        input.form-control(ng-model="reg.caseDetails",name='case',type='text')    


                  .row
                    .col-md-12
                      input.btn.btn-primary.pull-right.mb-xl(type='submit', ng-click='updateInfo(reg)', value="Update User Info")
          .col-md-3