                  p.mb-none.lead Get in Touch with Us
              .row.mt-lg
                .col-md-10.col-md-offset-1
                  .row.mt-lg.align-left
                    .col-md-5.mb-lg
                      h4.mt-md.mb-none Dhaka
                      ul.list.list-icons.mt-xlg
                        li
                          i.fa.fa-map-marker
                          strong Address:
                          |  Block D, Bashundhara Residential, Dhaka, Bangladesh
                        li
                          i.fa.fa-phone
                          strong Phone:
                          |  (+880) 456-789-1748
