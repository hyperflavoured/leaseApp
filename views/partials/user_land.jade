.container
	.row
		.col-md-12
			h1 Land List
			table.table(border='5')
				thead
					col
					tr
						th(width="10%") Division
						th District
						
						th Upazilla
						th Thana
						th Village
						th LandType
						th 
						
					tr
						th
							input(placeholder='Search...' ,size="10",type="text", ng-model="land.division", ng-keyup="getLandList(land)")
						th
							input(placeholder='Search...' ,size="10",type="text", ng-model="land.district", ng-keyup="getLandList(land)")
						
						th
							input(placeholder='Search...' ,size="10",type="text", ng-model="land.upazilla", ng-keyup="getLandList(land)")
						th
							input(placeholder='Search...' ,size="10",type="text", ng-model="land.thana", ng-keyup="getLandList(land)")
						th
							input(placeholder='Search...' ,size="10",type="text", ng-model="land.village", ng-keyup="getLandList(land)")
						th
							input(placeholder='Search...' ,size="10",type="text", ng-model="land.landType", ng-keyup="getLandList(land)")
						th
							d(size="10",ng-model="land.landType", ng-keyup="getLandList(land)")
						
						
				tbody
					tr(ng-repeat = "land in landList")
						td(ng-bind="land.division")
						td(ng-bind="land.district")
						
						td(ng-bind="land.upazilla")
						td(ng-bind="land.thana")
						td(ng-bind="land.village")
						td(ng-bind="land.landType")


						td 
							td
								a.btn-success(href="#/land_details/{{land._id}}") Details
							td
								a.btn-warning(href="#/land_update/{{land._id}}") Edit Info
